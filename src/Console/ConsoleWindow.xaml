<Window x:Class="ScratchNet.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:ScratchNet.Properties;assembly=Console"
        xmlns:local="clr-namespace:ScratchNet"
        mc:Ignorable="d" ShowActivated="True"
        Title="{x:Static loc:Language.WindowTitle}" Height="450" Width="800" WindowStartupLocation="CenterScreen" PreviewKeyDown="Window_PreviewKeyDown">
    <TextBox Name="ConsoleTextBox" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True" IsReadOnlyCaretVisible="False" Background="Black" Foreground="White" 
             VerticalScrollBarVisibility="Auto"
             PreviewTextInput="ConsolePreviewTextInput" PreviewKeyDown="ConsoleTextBox_PreviewKeyDown" MouseWheel="OnMouseWheel" PreviewMouseWheel="OnPreviewMouseWheel"></TextBox>
</Window>
